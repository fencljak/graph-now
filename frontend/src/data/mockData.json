{
  "microservice": {
    "name": "OrderService",
    "id": "order-svc-001",
    "gateways": [
      {
        "type": "REST",
        "name": "API Gateway",
        "outbound": [
          "PaymentService",
          "InventoryAPI",
          "ShippingService",
          "NotificationSvc",
          "UserService",
          "AnalyticsAPI"
        ],
        "inbound": [
          "POST /orders",
          "GET /orders/{id}",
          "PUT /orders/{id}",
          "DELETE /orders/{id}",
          "GET /orders/list",
          "POST /orders/bulk"
        ]
      },
      {
        "type": "KAFKA",
        "name": "Event Bus",
        "outbound": [
          "order.created",
          "order.updated",
          "order.shipped",
          "order.cancelled",
          "order.refunded",
          "order.completed"
        ],
        "inbound": [
          "payment.completed",
          "inventory.reserved",
          "shipping.ready",
          "user.verified",
          "stock.updated",
          "promo.applied"
        ]
      },
      {
        "type": "SOAP",
        "name": "Legacy Bridge",
        "outbound": [
          "ERP System",
          "AccountingWS",
          "WarehouseMgmt",
          "CRMService",
          "TaxCalculator",
          "AuditLogger"
        ],
        "inbound": [
          "OrderImport",
          "CustomerSync",
          "ProductUpdate",
          "PriceRefresh",
          "DiscountApply",
          "ReportGenerate"
        ]
      }
    ]
  }
}
